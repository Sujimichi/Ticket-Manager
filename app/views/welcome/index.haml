
- if current_user
  .centered{:style => 'margin-top:3em'}
    .edged_widget
      .title Current Projects
      %ul
        - current_user.projects.each do |project|
          %li
            %a{:href => "projects/#{project.id}/tickets"}
              %div{:class => "project_list_item"}
                .info_text
                  = project.name
                  .inline.small= "#{project.tickets.count} Tickets"

- unless current_user
  #welcome_matt{:style => 'margin-top:3em'}
    .centered
      .widget{:style => 'min-height:5em;', :id => 'login_widget'}
        - form_for UserSession.new do |f|
          - f.error_messages
          %br
          .css_table
            .label= f.label :username
            .value= f.text_field :username
          .css_table
            .label= f.label :password
            .value= f.password_field :password
          .clear
          =f.submit("Login")
          %br
