
.ticket_form{:style => 'padding:1em;'}
  -form_for ticket do |f|
    = f.error_messages
    - if project && project.is_a?(Project)
      = hidden_field_tag :project_id, project.id
    - else
      .label Ticket for Project:
      = select_tag :project_id, options_for_select(current_user.projects.map{|p| [p.name, p.id]})

    .label= f.label :title
    .inline.value= f.text_field :title

    .label= f.label :details
    .inline.value= text_area :details, nil ,{:cols => 70, :rows => 5}

    .ticket_submit_button= f.submit "Save"
